{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "noImplicitAny": false,
    "outDir": "packages/react-toolbox-core/lib",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "packages/react-toolbox-core/src"
  ],
  "exclude": [
    "node_modules"
  ]
}
